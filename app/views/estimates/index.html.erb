<h1>Listing estimates</h1>

<table class="table">
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th>Author</th>
    <th>Client</th>
    <th>Published date</th>
    <th>Expiration date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @estimates.each do |estimate| %>
  <tr>
    <td><%= estimate.title %></td>
    <td><%= estimate.body %></td>
    <td><%= estimate.author.email %></td>
    <td><%= link_to estimate.client.name, client_path(estimate.client) %></td>
    <td><%= estimate.published_date %></td>
    <td><%= estimate.expiration_date %></td>
    <td><%= link_to 'Show', estimate %></td>
    <td><%= link_to 'Edit', edit_estimate_path(estimate) %></td>
    <td><%= link_to 'Destroy', estimate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Estimate', new_estimate_path, class: 'btn btn-primary' %>
