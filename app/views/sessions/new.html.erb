<div class="row-fluid">
  <div class="col-sm-6 col-sm-offset-3">
    <%= form_tag login_path do %>
      <div class="field">
        <%= label_tag :email %>
        <div class="form-group">
          <%= text_field_tag :email, params[:email], class: 'form-control' %>
        </div>
      </div>
      <div class="field">
        <%= label_tag :password %>
        <div class="form-group">
          <%= password_field_tag :password, params[:password], class: 'form-control' %>
        </div>
      </div>
      <div class="field">
        <div class="checkbox">
          <%= label_tag :remember_me do %>
            <%= check_box_tag :remember_me, params[:remember_me] %> Remember Me
          <% end %>
        </div>
      </div>
      <div class="actions"><%= submit_tag "Log in", class: 'btn btn-primary btn-block' %></div>
    <% end %>
  </div>
</div>
